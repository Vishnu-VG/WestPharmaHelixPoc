@using System;
@using System.Collections.Generic;
@using Sitecore.Data.Items;
@model IEnumerable<Item>

    <div>
        <h4>SliderModel</h4>
        <div>
            @{
                if (Model.Count() == 0)
                {
                    <p>Add slides</p>
                }

            }
        </div>
        <hr />
        @{
                int i = 0;
                foreach (var item in Model)
                {
                i++;
                <dl class="dl-horizontal">
                    <dt>
                        @i-st Slider Text:
                    </dt>

                    <dd>
                        @*@item.Text*@
                        @Html.Sitecore().Field("Text", item)
                    </dd>

                    <dt>
                        @i-st Slider Image:
                    </dt>

                    <dd>
                        @Html.Sitecore().Field("Image", item)
                    </dd>

                    <dt>
                        @i-st Slider URL:
                    </dt>

                    <dd>
                        @Html.Sitecore().Field("RedirectURL", item)
                    </dd>

                </dl>
            }
        }

    </div>

